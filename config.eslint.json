{
	"extends": ["eslint:all", "plugin:react/recommended", "airbnb"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"globals": {
		"console": true,
		"document": true
	},
	"rules": {
		"capitalized-comments": 0,
		"comma-dangle": 0,
		"dot-location": 0,
		"eol-last": 0,
		"import/extensions": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-unresolved": 0,
		"indent": [1, "tab"],
		"linebreak-style": 0,
		"max-len": 0,
		"no-console": 0,
		"no-tabs": 0,
		"padded-blocks": 0,
		"quote-props": [2, "as-needed"],
		"react/forbid-prop-types": [2, {
			"forbid": ["any", "object"]
		}],
		"react/no-unused-prop-types": [2, {
			"skipShapeProps": true
		}],
		"react/jsx-indent": [2, "tab"],
		"quotes": [1, "single", {
			"avoidEscape": true,
			"allowTemplateLiterals": true
		}]
	},
	"plugins": ["react"]
}